@model List<CasoPracticoBLL.Dtos.ClienteDto>

@{
    ViewData["Title"] = "Clientes";
}

<h2>Clientes</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Crear">Crear Cliente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Identificación</th>
            <th>Fecha Nacimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Identificacion</td>
                <td>@c.FechaNacimiento.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Editar" asp-route-id="@c.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@c.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
